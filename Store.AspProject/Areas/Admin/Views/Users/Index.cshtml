@using Store.AspProject.DataLayer.Models.user

@model IEnumerable<user>




<button type="button" class="btn btn-primary" data-bs-toggle="button">افزودن کاربر جدید </button>

<section class="content">


    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered   myTable">
                            <thead>
                                <tr class="bg-secondary">
                                    <th scope="col">نام کاربری</th>
                                    <th scope="col">ایمیل</th>
                                    <th scope="col">شماره موبایل</th>
                                    <th scope="col">وضعیت</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in @Model)
                                    {
                                        <tr>
                                            <th>@item.UserName</th>
                                            <td>@item.UserEmail</td>
                                            <td>@item.UserMobile</td>
                                            <td>@item.IsAdmin</td>
                                            <td>
                                                <a href="/Admin/EditUser/@item.User_ID" class="btn btn-warning btn-sm btn-outline">ویرایش</a>
                                                <a href="/Admin/Delete/@item.User_ID" class="btn btn-danger btn-sm btn-outline">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

