@using Store.AspProject.Services.Interfces
@using System.Security.Claims

@inject IOrderService OrderService;
@{
    var order = OrderService.UnpaidOrder(int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value));
}

<div class="row">


    <div class="col-4">

        <div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">An item</li>
    <li class="list-group-item">A second item</li>
    <li class="list-group-item">A third item</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>

    </div>



    <div class="col-8">
        <section class="content">

            @if (Model != null)
            {
                <div class="row justify-content-center">
                    <div class="col-8 ">
                        <div class="box">
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table class="table table-hover no-wrap myTable">
                                        <thead>
                                            <tr class="bg-secondary">
                                                <th scope="col"> شماره فاکتور</th>

                                                <th scope="col"> جمع فاکتور</th>
                                                <th scope="col">وضعیت</th>
                                                <th scope="col">دستورات</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @if (Model != null && Model.Any())
                                            {
                                                @foreach (var item in @Model)
                                                {
                                                    <tr>
                                                        <th>@item.OrderId</th>

                                                        <td>@item.orderSum</td>
                                                        <td>
                                                            <p>
                                                                @(item.IsFinally?"پرداخت شده":"پرداخت نشده")
                                                            </p>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-warning" href="/Product/ShowOrderDetail/@item.OrderId">نمایش اقلام</a>
                                                            <a class="btn btn-success" href="/Product/Paymentrequest/@item.OrderId">پرداخت</a>
                                                        </td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            else
            {
                <div class="alert alert-danger">
                    <p>
                        هیچ فاکتوری برای نمایش وجود ندارد
                    </p>
                </div>

            }

        </section>

    </div>
</div>