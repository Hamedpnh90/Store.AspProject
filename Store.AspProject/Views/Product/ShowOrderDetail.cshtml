@using Store.AspProject.DataLayer.Models.Order
@using Store.AspProject.Utilites
@model IEnumerable<OrderDetails>


    @{
    ViewData["Title"]
    = "اقلام فاکتور کاربر";
}

<section class="content">

    @if (Model != null)
    {
        <div class="row justify-content-center">
            <div class="col-6 ">
                <div class="col-12">
                <div class="box">
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table table-hover no-wrap myTable">
                                <thead>
                                    <tr class="bg-secondary">
                                        <th scope="col">  تصویر</th>
                                        <th scope="col">  عنوان</th>
                                        <th scope="col">تعداد</th>
                                        <th scope="col">قیمت</th>
                                        <th scope="col">دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var item in @Model)
                                        {
                                            <tr>
                                                <th> <img src="@($"{ImagesfilePath.ProductImage}{item.product.ImageName}")"  class="img-thumbnail" style="max-width:100px;height:100px" /></th>
                                                <th>@item.product.ProductTitle</th>

                                                <td>@item.Count</td>
                                                <td>
                                                    <p>
                                                        @item.Price
                                                    </p>
                                                </td>
                                                <td>
                                                   
                                                    <a class="btn btn-danger" href="/Product/DeleteOrderDetail/@item.DetailsId">حذف</a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    }

    else
    {
        <div class="alert alert-danger">
            <p>
                هیچ فاکتوری برای نمایش وجود ندارد
            </p>
        </div>

    }

</section>