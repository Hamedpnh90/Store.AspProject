@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store.AspProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/MyCss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.AspProject.styles.css" asp-append-version="true" />
</head>
<body dir="rtl">
    <div class="row">
        <header style="background-color:#686dc3">
            <div class="row">
                <div class="bs-component">
                    <nav class="navbar navbar-expand-lg bg-outline-info" data-bs-theme="warning">
                        <div class="container-fluid">

                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="true" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarColor01">
                                <div class="col-8 " id="navbarColor0">
                                    <ul class="navbar-nav me-auto">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="/">
                                                خانه
                                                <span class="visually-hidden">(current)</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">محصولات</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">تماس  با ما</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">درباره ما</a>
                                        </li>
                                        @* <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                                            <div class="dropdown-menu">
                                            <a class="dropdown-item" href="#">Action</a>
                                            <a class="dropdown-item" href="#">Another action</a>
                                            <a class="dropdown-item" href="#">Something else here</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Separated link</a>
                                            </div>
                                            </li>*@
                                    </ul>
                                </div>

                                <div class="col-3 me-2">
                                    @*<a class="navbar-brand" href="#">فروشگاه چند منظوره</a>*@

                                    @inject SignInManager<IdentityUser> _SignInManager;

                                    @if (_SignInManager.IsSignedIn(User))
                                    {

    
                                        <a class="btn btn-outline-info" asp-controller="UserPanel" asp-action="index">ورود به پنل @User.Identity.Name </a>


                                        <form asp-action="LogOut" asp-controller="Account" method="post">
                                            <button type="submit" class="btn btn-outline-danger">خروج</button>
                                        </form>



                                    }
                                    else
                                    {
                                        <a class="btn btn-outline-info" asp-controller="Account" asp-action="Register">ثبت نام</a>
                                        <a class="btn btn-outline-info" asp-controller="Account" asp-action="Login">ورود</a>


                                    }

                                </div>

                            </div>
                        </div>

                    </nav>

                    @*   <button class="source-button btn btn-primary btn-xs" type="button" tabindex="0">
                        <i class="bi bi-code">

                        </i>
                        </button>*@
                </div>
            </div>


        </header>


        <main class="m-2 ">

            @RenderBody()
        </main>




        <footer class="mastfoot mt-auto">


            <div class="row">
                <!-- Remove the container if you want to extend the Footer to full width. -->
                <div class="container my-1">

                    <footer class="text-start text-lg-start" style="background-color: #686dc3;">
                        <div class="row">
                            <div class="col-8">
                                <div class="container d-flex justify-content-center py-2">

                                    <button class="btn btn-primary" type="button" id="button-addon2">تماس با ما</button>
                                    <button class="btn btn-primary" type="button" id="button-addon2">درباره ما</button>
                                    <button class="btn btn-primary" type="button" id="button-addon2">آخرین مقالات</button>
                                </div>

                            </div>
                            <div class="col-4">
                                <div class="container d-flex justify-content-start py-2">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="پست الکترونیکی شما" aria-label="Recipient's username" aria-describedby="button-addon2">
                                        <button class="btn btn-primary" type="button" id="button-addon2">عضویت در خبرنامه</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Copyright -->
                        <div class="text-center text-white p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                            پروژه فروشگاه دوره asp:
                            <a class="text-white" href="/"></a>
                        </div>
                        <!-- Copyright -->
                    </footer>


                    <!-- End of .container -->
                </div>
            </div>
    </div>

    </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
